<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        tools:context=".fragment.CustomerInput">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/customer_info"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_marginBottom="3dp"
                    android:text="Customer Info."
                    android:gravity="center_horizontal" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/purple_700"
                />
            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:hint="First Name"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:textSize="15sp"
                android:singleLine="true"
                android:layout_marginLeft="10dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"

                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="15dp"
                android:padding="5dp"
                android:id="@+id/customerInputFirstName"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:imeOptions="actionDone"
                android:hint="Last Name"
                android:textSize="15sp"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:imeOptions="actionDone"
                android:paddingStart="10dp"
                android:textSize="15dp"
                android:padding="5dp"
                android:maxLines="1"
                android:singleLine="true"
                android:id="@+id/customerInputLastName"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:inputType="phone"
                android:hint="Phone"
                android:textSize="15sp"
                android:singleLine="true"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:inputType="phone"
                android:textSize="15dp"
                android:padding="5dp"
                android:singleLine="true"
                android:id="@+id/customerInputPhone"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:imeOptions="actionDone"
                android:hint="Email"
                android:textSize="15dp"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textEmailAddress"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:imeOptions="actionDone"
                android:textSize="15dp"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:id="@+id/customerInputEmail"
                android:paddingLeft="10dp" />-->
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:imeOptions="actionDone"
                android:hint="Zip Code"
                android:textSize="12dp"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textEmailAddress"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp" />
            <LinearLayout
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginRight="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="120dp">


                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:paddingStart="10dp"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:id="@+id/customerInputZip"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:imeOptions="actionDone"
                    android:hint="Road Name"
                    android:textSize="12dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"

                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="15dp" />

                    <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:paddingStart="10dp"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:singleLine="true"
                    android:id="@+id/customerInputStreet"
                    android:paddingLeft="10dp"

                    android:layout_marginLeft="10dp" />
                </LinearLayout>
                <Button
                    android:layout_marginTop="-3dp"
                    android:layout_width="100dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-110dp"
                    android:text="Search"
                    android:id="@+id/addressSearch"
                    android:layout_marginLeft="-110dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:imeOptions="actionDone"
                    android:hint="Select your address"
                    android:padding="5dp"
                    android:paddingStart="15dp"
                    android:layout_marginBottom="5dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:id="@+id/et_suggestion_address"
                    android:paddingLeft="15dp"
                    android:layout_marginRight="30dp" />
                <Spinner
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/addressSelect"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:imeOptions="actionDone"
                android:hint="Thoroughfare"
                android:textSize="15dp"
                android:maxLines="1"
                android:inputType="text"
                android:singleLine="true"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp" />
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:imeOptions="actionDone"
                android:paddingStart="10dp"
                android:textSize="15dp"
                android:padding="5dp"
                android:maxLines="1"
                android:inputType="text"
                android:singleLine="true"
                android:id="@+id/customerInputStreetName"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:inputType="text"
                android:hint="City"
                android:textSize="15sp"
                android:singleLine="true"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textSize="15dp"
                android:padding="5dp"
                android:singleLine="true"
                android:id="@+id/customerInputCity"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:inputType="text"
                android:hint="Building Number"
                android:textSize="15dp"
                android:singleLine="true"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:inputType="text"
                android:textSize="15dp"
                android:padding="5dp"
                android:hint=""
                android:singleLine="true"
                android:editable="false"
                android:id="@+id/customerInputCountry"
                android:paddingLeft="10dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="SAVE"
                android:id="@+id/customerSave"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>